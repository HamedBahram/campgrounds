<%- include('../partials/_header') %>

    <main class="container">
        <h1>Add a new campground</h1>
        <form action="/campgrounds" method="POST">
            <div>
                <input type="text" name="campground[title]" placeholder="title">
            </div>
            <div>
                <input type="text" name="campground[location]" placeholder="location">
            </div>
            <button type="submit">Add Campground</button>
        </form>
        <a href="/campgrounds">All Camps</a>
    </main>

