<%- include('../partials/_header') %>

    <main class="container">
        <div class="row">
            <h1 class="text-center mb-4">Edit Camp</h1>
            <div class="col-6 mx-auto">
                <form class="needs-validation" action="/campgrounds/<%= camp._id %>?_method=PATCH" method="POST" novalidate enctype="multipart/form-data">
                    <div class="mb-2">
                        <input class="form-control" type="text" name="campground[title]" placeholder="Add a title" value="<%= camp.title %>" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please add a title.</div>
                    </div>
                    <div class="mb-2">
                        <input class="form-control" type="text" name="campground[location]" placeholder="Location" value="<%= camp.location %>" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please provide the location.</div>
                    </div>
                    <div class="input-group mb-2">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]" placeholder="Price" value="<%= camp.price %>" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please add a price.</div>
                    </div>
                    <div class="mb-2">
                        <input class="form-control" type="file" name="images" multiple>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please choose an image</div>
                    </div>
                    <div class="mb-2">
                        <textarea class="form-control" name="campground[description]" placeholder="Description" cols="30" rows="10" required><%= camp.description %></textarea>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please add a description.</div>
                    </div>
                    <div class="container mb-4 border border-1 rounded py-2">
                        <p class="text-muted fw-bold">Current images</p>
                        <div class="row">
                            <% camp.images.forEach((img, i) => { %>
                                <div class="col-4 mb-1">
                                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                                        <label class="form-check-label text-danger" for="image-<%= i %>">Delete</label>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                    <button class="btn btn-success mb-4" type="submit">Update Camp</button>
                    <a class="btn btn-outline-dark mb-4" href="/campgrounds/<%= camp._id %>">Cancel</a>
                </form>
                
            </div>
        </div>
    </main>

<%- include('../partials/_footer') %>