<%- include('../partials/_header') %>

<main class="container">
    <div class="row">
        <h1 class="text-center mb-4">Register</h1>
        <div class="col-6 mx-auto">
            <%- include('../partials/_flash') %>
            <form class="needs-validation mb-4" action="/register" method="POST" novalidate>
                <div class="mb-2">
                    <input class="form-control" type="email" name="email" placeholder="Email" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid email</div>
                </div>
                <div class="mb-2">
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">You must set a password</div>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-info" type="submit">Register</button>
                </div>
            </form>
            <p>Already have an account? <a class="link-success" href="/login">Log in</a></p>
        </div>
    </div>

</main>

<%- include('../partials/_footer') %>
<%- include('../partials/_closing') %>